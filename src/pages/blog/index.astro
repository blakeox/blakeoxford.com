---
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')) as any[];
const title = "Blog";
const description = "Explore my latest thoughts, tutorials, and insights on web development, design, and technology.";
const canonicalUrl = "https://blakeoxford.com/blog/";
---

<Layout title={title} description={description} url={canonicalUrl} wide={true}>
  <section class="c-blog-page w-full py-20 md:py-32 relative overflow-hidden bg-gradient-to-br from-background via-accent/5 to-background animate-fade-in" role="region" aria-labelledby="blog-title">
    <!-- Animated SVG background pattern -->
    <div class="absolute inset-0 z-0 opacity-20 pointer-events-none">
      <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="blog-grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M0 40L40 0M20 40L40 20M0 20L20 0" fill="none" stroke="currentColor" stroke-width="1" stroke-opacity="0.12" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#blog-grid)" />
      </svg>
    </div>
    <!-- Blurred/floating shapes -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-accent/20 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2 pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-accent/20 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2 pointer-events-none"></div>
    <h1 id="blog-title" class="font-heading font-bold text-5xl md:text-6xl text-gradient bg-gradient-to-r from-accent-dark to-purple-600 mb-6 text-center animate-fade-in">Blog</h1>
    <p class="text-lg text-center mb-8 text-gray-700 dark:text-gray-300 animate-fade-in">Explore my latest thoughts, tutorials, and insights on web development, design, and technology.</p>
    <!-- Decorative SVG divider -->
    <div aria-hidden="true" class="w-full overflow-hidden pointer-events-none mb-8">
      <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-16 md:h-20 lg:h-24">
        <path fill="currentColor" fill-opacity="0.08" d="M0,32 C360,80 1080,0 1440,48 L1440,80 L0,80 Z" />
      </svg>
    </div>
    <!-- Blog Search Bar -->
    <div class="blog-search mb-8 max-w-2xl mx-auto">
      <input type="text" id="blog-search-input" placeholder="Search blog posts..." aria-label="Search blog posts" class="w-full p-3 rounded border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900" />
    </div>
    <div class="blog-posts grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.length === 0 && (
        <div id="no-results">
          <p>No matching blog posts found.</p>
        </div>
      )}
      {posts.map((post: any) => (
        <article class="blog-post scroll-animate bg-white dark:bg-gray-900 rounded-2xl shadow-xl p-6 flex flex-col border border-gray-100 dark:border-gray-800" data-title={post.data.title.toLowerCase()} data-excerpt={post.data.description?.toLowerCase() || ''}>
          <h2 class="text-2xl font-semibold mb-2">
            <a href={`/blog/${post.slug}/`} class="hover:underline text-gradient bg-gradient-to-r from-accent-dark to-purple-600" data-analytics="blog-read-more">{post.data.title}</a>
          </h2>
          {post.data.description && <p class="mb-4 text-gray-700 dark:text-gray-300">{post.data.description}</p>}
          <a href={`/blog/${post.slug}/`} class="c-btn btn btn-primary mt-auto self-start" data-analytics="blog-read-more">Read More</a>
        </article>
      ))}
    </div>
  </section>
  <script src="/assets/js/scroll.js" defer></script>
  <script src="/assets/js/image-lazyload.js" defer></script>
  <script src="/assets/js/filter.js" defer></script>
  <script src="/assets/js/analytics.js" defer></script>
</Layout>
