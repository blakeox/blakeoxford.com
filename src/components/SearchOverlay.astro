---
// SearchOverlay.astro component
---

<div id="search-overlay" class="search-overlay fixed inset-0 z-[1100]" role="dialog" aria-modal="true" aria-labelledby="search-title">
  <div class="search-backdrop" id="search-backdrop"></div>
  <div class="search-container">
    <div class="search-header">
      <div class="search-title-section">
        <h2 class="search-title" id="search-title">Search</h2>
        <div class="search-shortcut-hint">
          <kbd>/</kbd> or <kbd>Ctrl+K</kbd> to open
        </div>
      </div>
      <button 
        id="close-search" 
        class="search-close-button"
        aria-label="Close search"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <div class="search-input-container">
      <div class="search-input-wrapper">
        <label for="search-input" class="sr-only">Search</label>
        <button type="button" class="search-icon-btn" id="search-icon-btn" tabindex="-1" aria-label="Focus search">
          <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <input
          id="search-input"
          type="text"
          placeholder="Search for content, projects, blog posts..."
          class="search-input"
          aria-label="Search"
          autocomplete="off"
          spellcheck="false"
        />
        <button type="button" class="search-clear-btn" id="search-clear-btn" aria-label="Clear search" style="display:none;">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="search-loading hidden" id="search-loading">
          <div class="loading-spinner"></div>
        </div>
      </div>
    </div>
    
    <div id="search-results-meta" class="search-results-meta" aria-live="polite" aria-atomic="true"></div>
    <div id="search-didyoumean" class="search-didyoumean" style="display:none;" aria-live="polite"></div>
    <div id="search-results" class="search-results" aria-live="polite"></div>
    <div id="search-suggestions" class="search-suggestions" style="display:none;"></div>
    
    <div class="search-footer">
      <div class="search-shortcuts">
        <div class="shortcut-item">
          <kbd>‚Üë</kbd><kbd>‚Üì</kbd> navigate
        </div>
        <div class="shortcut-item">
          <kbd>‚Üµ</kbd> select
        </div>
        <div class="shortcut-item">
          <kbd>esc</kbd> close
        </div>
      </div>
    </div>
    <!-- Focus trap elements -->
    <button id="search-focus-start" style="position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden;">start</button>
    <button id="search-focus-end" style="position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden;">end</button>
  </div>
</div>

<style>
  .search-overlay {
    background: var(--overlay-40);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem 1rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s var(--ease-emphasized);
  }
  
  .search-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .search-backdrop {
    position: absolute;
    inset: 0;
    background: var(--color-background-dark);
    opacity: 0.8;
    pointer-events: auto;
    z-index: 0;
    /* Add vignette/radial gradient for depth */
    background: radial-gradient(ellipse at 50% 30%, rgba(0,0,0,0.10) 0%, rgba(0,0,0,0.25) 80%, rgba(0,0,0,0.80) 100%), var(--color-background-dark);
  }
  
  .dark .search-backdrop {
    background: radial-gradient(ellipse at 50% 30%, rgba(30,41,59,0.10) 0%, rgba(30,41,59,0.35) 80%, rgba(30,41,59,0.90) 100%), var(--color-background);
    opacity: 0.9;
  }
  
  .search-container {
    position: relative;
    width: 100%;
    max-width: 42rem;
    max-height: 80vh;
    background: var(--glass-surface-bg);
    backdrop-filter: blur(var(--blur-lg));
    -webkit-backdrop-filter: blur(var(--blur-lg));
    border: var(--glass-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--elevation-5);
    overflow: hidden;
    transform: scale(0.95) translateY(-20px);
    transition: all 0.3s var(--ease-emphasized);
  }
  
  .dark .search-container {
    background: var(--glass-surface-bg-dark);
    border: var(--glass-border-dark);
  }
  
  .search-overlay.active .search-container {
    transform: scale(1) translateY(0);
  }
  
  .search-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid var(--color-neutral-light);
  }
  
  .dark .search-header {
    border-bottom-color: var(--color-neutral-dark);
  }
  
  .search-title-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .search-title {
    font-size: var(--fs-xl);
    font-weight: var(--fw-semibold);
    color: var(--color-foreground);
    margin: 0;
  }
  
  .dark .search-title {
    color: var(--color-foreground-light);
  }
  
  .search-shortcut-hint {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--fs-sm);
    color: var(--color-neutral);
  }
  
  .search-close-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    background: transparent;
    color: var(--color-foreground);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all 0.2s var(--ease-standard);
  }
  
  .search-close-button:hover {
    background: var(--color-accent);
    color: var(--color-background);
    transform: scale(1.05);
  }
  
  .dark .search-close-button {
    color: var(--color-foreground-light);
  }
  
  .search-input-container {
    padding: 0 1.5rem 1rem;
  }
  
  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    background: var(--glass-surface-bg);
    border-radius: 999px;
    box-shadow: 0 2px 16px 0 rgba(30, 41, 59, 0.10), 0 1.5px 8px 0 rgba(30, 41, 59, 0.08);
    border: 1.5px solid var(--color-neutral-light);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    transition: box-shadow 0.25s var(--ease-standard), border-color 0.25s var(--ease-standard), background 0.25s;
    overflow: visible;
  }
  
  .search-icon-btn {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: filter 0.2s;
  }
  
  .search-icon-btn:focus .search-icon,
  .search-icon-btn:hover .search-icon {
    filter: drop-shadow(0 0 2px var(--color-accent));
  }
  
  .search-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-neutral);
    transition: color 0.2s, filter 0.2s;
  }
  
  .search-input {
    width: 100%;
    padding: 1rem 2.5rem 1rem 3.25rem;
    font-size: var(--fs-lg);
    color: var(--color-foreground);
    background: transparent;
    border: none;
    border-radius: 999px;
    outline: none;
    transition: box-shadow 0.2s, background 0.2s, color 0.2s;
    box-shadow: none;
    z-index: 2;
  }
  
  .search-input:focus::placeholder {
    opacity: 0.5;
    transition: opacity 0.2s;
  }
  
  .search-input::placeholder {
    color: var(--color-neutral);
    opacity: 0.85;
    transition: opacity 0.2s;
  }
  
  .dark .search-input {
    color: var(--color-foreground-light);
  }
  
  .search-clear-btn {
    position: absolute;
    right: 1.25rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-neutral);
    font-size: 1.5rem;
    border-radius: 50%;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
  }
  
  .search-clear-btn:focus,
  .search-clear-btn:hover {
    background: var(--color-accent);
    color: var(--color-background);
    box-shadow: 0 0 0 2px var(--color-accent-light);
  }
  
  .search-loading {
    position: absolute;
    right: 1rem;
    display: flex;
    align-items: center;
  }
  
  .loading-spinner {
    width: 1.25rem;
    height: 1.25rem;
    border: 2px solid var(--color-neutral-light);
    border-top: 2px solid var(--color-accent);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .search-results {
    max-height: 24rem;
    overflow-y: auto;
    overscroll-behavior: contain;
  }
  
  .search-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 1.5rem;
    text-align: center;
    color: var(--color-neutral);
    font-size: var(--fs-lg);
    opacity: 0.85;
  }
  
  .search-empty-state::before {
    content: "üîç";
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    display: block;
  }
  
  .search-empty-state strong {
    color: var(--color-accent);
    font-weight: var(--fw-bold);
  }
  
  .search-empty-state .search-suggestion-list {
    margin-top: 1rem;
    padding: 0;
  }
  
  .search-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-neutral-light);
    background: var(--color-surface-subtle);
  }
  
  .dark .search-footer {
    border-top-color: var(--color-neutral-dark);
    background: var(--color-surface-dark-subtle);
  }
  
  .search-shortcuts {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  
  .shortcut-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--fs-sm);
    color: var(--color-neutral);
  }
  
  kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    height: 1.5rem;
    padding: 0 0.375rem;
    font-size: var(--fs-xs);
    font-family: var(--font-mono);
    color: var(--color-foreground);
    background: var(--color-surface);
    border: 1px solid var(--color-neutral-light);
    border-radius: var(--radius);
    box-shadow: 0 1px 0 var(--color-neutral-light);
  }
  
  .dark kbd {
    color: var(--color-foreground-light);
    background: var(--color-surface-dark);
    border-color: var(--color-neutral-dark);
    box-shadow: 0 1px 0 var(--color-neutral-dark);
  }
  
  /* Search result items */
  .search-result-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid var(--color-neutral-light);
    border-radius: var(--radius-xl);
    background: rgba(255,255,255,0.65);
    box-shadow: 0 2px 12px 0 rgba(30,41,59,0.06);
    margin-bottom: 1rem;
    transition: box-shadow 0.18s, background 0.18s, transform 0.18s;
    position: relative;
    z-index: 1;
    opacity: 0;
    transform: translateY(12px) scale(0.98);
    animation: fadein-slide 0.35s cubic-bezier(0.4,0,0.2,1) forwards;
    animation-delay: var(--result-delay, 0ms);
    border: 1.5px solid transparent;
    background-clip: padding-box;
    overflow: hidden;
  }
  
  .dark .search-result-item {
    background: rgba(30,41,59,0.65);
    border-bottom-color: var(--color-neutral-dark);
  }
  
  .search-result-item:hover,
  .search-result-item.highlighted {
    border: 1.5px solid var(--color-accent);
    background: linear-gradient(120deg, var(--color-accent-light) 80%, var(--color-accent) 100%);
    box-shadow: 0 4px 24px 0 rgba(37,99,235,0.10), 0 1.5px 8px 0 rgba(30,41,59,0.10);
    transform: scale(1.025);
    animation: card-pop 0.18s cubic-bezier(.68,-0.55,.27,1.55);
  }
  
  .search-result-item:active {
    transform: scale(0.98);
    box-shadow: 0 1px 4px 0 rgba(37,99,235,0.10);
  }
  
  .search-result-icon {
    width: 2.25rem;
    height: 2.25rem;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: var(--color-background);
    border-radius: 50%;
    font-size: 1.25rem;
    margin-top: 0.25rem;
    box-shadow: 0 1px 4px 0 rgba(37,99,235,0.10);
    transition: filter 0.2s, transform 0.2s;
  }
  
  .search-result-item:hover .search-result-icon,
  .search-result-item:focus .search-result-icon {
    filter: drop-shadow(0 0 4px var(--color-accent));
    animation: icon-wiggle 0.5s cubic-bezier(.68,-0.55,.27,1.55);
  }
  
  @keyframes icon-wiggle {
    0% { transform: rotate(0deg); }
    20% { transform: rotate(-8deg); }
    40% { transform: rotate(8deg); }
    60% { transform: rotate(-4deg); }
    80% { transform: rotate(4deg); }
    100% { transform: rotate(0deg); }
  }
  
  .search-result-content {
    flex: 1;
    min-width: 0;
  }
  
  .search-result-title,
  .search-result-excerpt {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
    display: block;
    position: relative;
  }
  
  .search-result-title {
    font-size: var(--fs-base);
    font-weight: var(--fw-medium);
    margin: 0 0 0.25rem;
    line-height: var(--lh-tight);
  }
  
  .search-result-excerpt {
    font-size: var(--fs-sm);
    color: var(--color-neutral);
    margin: 0;
    line-height: var(--lh-normal);
    max-width: 32ch;
    opacity: 0.85;
  }
  
  .search-result-excerpt::after {
    content: '';
    position: absolute;
    right: 0; top: 0; bottom: 0;
    width: 2.5em;
    background: linear-gradient(to right, transparent, var(--color-surface));
    pointer-events: none;
    display: block;
  }
  
  .search-result-type {
    font-size: var(--fs-xs);
    color: var(--color-accent);
    font-weight: var(--fw-medium);
    text-transform: uppercase;
    letter-spacing: var(--ls-wide);
    margin-bottom: 0.25rem;
  }
  
  .search-result-item:hover .search-result-type,
  .search-result-item.highlighted .search-result-type {
    color: var(--color-background);
    opacity: 0.9;
  }
  
  .search-result-type-badge {
    display: inline-block;
    font-size: var(--fs-xs);
    color: var(--color-accent);
    background: var(--color-accent-light);
    font-weight: var(--fw-medium);
    text-transform: uppercase;
    letter-spacing: var(--ls-wide);
    border-radius: var(--radius-lg);
    padding: 0.15em 0.7em;
    margin-left: 0.5em;
    margin-bottom: 0.25rem;
    vertical-align: middle;
    transition: transform 0.18s, background 0.18s, color 0.18s;
  }
  
  .search-result-item:hover .search-result-type-badge,
  .search-result-item.highlighted .search-result-type-badge {
    transform: scale(1.12);
    background: var(--color-accent);
    color: var(--color-background);
  }
  
  .search-suggestion-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 1rem 1.5rem 0.5rem 1.5rem;
  }
  
  .search-suggestion {
    display: inline-flex;
    align-items: center;
    padding: 0.5em 1.25em;
    font-size: var(--fs-sm);
    background: var(--color-surface-subtle);
    color: var(--color-accent-dark);
    border: none;
    border-radius: 999px;
    box-shadow: 0 1px 2px 0 rgba(30,41,59,0.06);
    cursor: pointer;
    transition: background 0.18s, color 0.18s, box-shadow 0.18s, transform 0.18s;
    margin-bottom: 0.5rem;
  }
  
  .search-suggestion:hover, .search-suggestion:focus {
    background: var(--color-accent-light);
    color: var(--color-background);
    box-shadow: 0 2px 8px 0 rgba(37,99,235,0.10);
    transform: scale(1.07);
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .search-overlay {
      padding: 1rem;
    }
    
    .search-container {
      max-height: 90vh;
    }
    
    .search-header {
      padding: 1rem 1rem 0.75rem;
    }
    
    .search-input-container {
      padding: 0 1rem 0.75rem;
    }
    
    .search-footer {
      padding: 0.75rem 1rem;
    }
    
    .search-shortcuts {
      justify-content: space-between;
    }
    
    .shortcut-item {
      font-size: 0.75rem;
    }
    
    .search-input-wrapper {
      border-radius: 999px;
      padding: 0.25rem;
    }
    
    .search-input {
      font-size: var(--fs-base);
      padding: 0.75rem 2.25rem 0.75rem 2.75rem;
    }
    
    .search-clear-btn {
      right: 0.75rem;
      width: 1.5rem;
      height: 1.5rem;
      font-size: 1.25rem;
    }
    
    .search-icon-btn {
      left: 0.5rem;
    }
    
    .search-result-item {
      padding: 1rem 0.75rem;
      font-size: var(--fs-base);
      margin-bottom: 0.75rem;
    }
    
    .search-result-icon {
      width: 2rem;
      height: 2rem;
      font-size: 1rem;
    }
    
    .search-suggestion-list {
      padding: 0.75rem 0.75rem 0.25rem 0.75rem;
    }
    
    .search-suggestion {
      font-size: var(--fs-xs);
      padding: 0.4em 1em;
    }
  }
  
  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .search-overlay,
    .search-container,
    .search-result-item {
      transition: none !important;
      animation: none !important;
    }
    
    .loading-spinner {
      animation: none !important;
    }
  }
  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0,0,0,0);
    white-space: nowrap;
    border: 0;
  }
  
  .search-results-meta {
    font-size: var(--fs-sm);
    color: var(--color-neutral);
    padding: 0.5rem 1.5rem 0.25rem 1.5rem;
    min-height: 1.5rem;
    transition: opacity 0.3s;
    opacity: 0.85;
  }
  .search-didyoumean {
    font-size: var(--fs-base);
    color: var(--color-accent);
    padding: 0.25rem 1.5rem 0.5rem 1.5rem;
    min-height: 1.5rem;
    font-style: italic;
    display: block;
    opacity: 0.95;
    transition: opacity 0.3s;
  }
  @keyframes fadein-slide {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .search-empty-state {
    /* ...existing styles... */
    opacity: 0;
    animation: fadein-empty 0.5s cubic-bezier(0.4,0,0.2,1) 0.1s forwards;
  }
  @keyframes fadein-empty {
    to {
      opacity: 1;
    }
  }
  .search-result-preview {
    display: none;
    position: absolute;
    left: 100%;
    top: 0;
    min-width: 220px;
    max-width: 320px;
    background: var(--glass-surface-bg);
    color: var(--color-foreground);
    border-radius: var(--radius-xl);
    box-shadow: 0 4px 24px 0 rgba(30,41,59,0.12);
    padding: 1rem;
    z-index: 10;
    font-size: var(--fs-sm);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.18s, transform 0.18s;
    transform: translateY(8px) scale(0.98);
  }
  .search-result-item:focus .search-result-preview,
  .search-result-item:hover .search-result-preview {
    display: block;
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0) scale(1);
  }
  /* Confetti animation placeholder */
  .confetti {
    pointer-events: none;
    position: fixed;
    left: 0; top: 0; width: 100vw; height: 100vh;
    z-index: 9999;
    animation: confetti-fall 1.2s cubic-bezier(.68,-0.55,.27,1.55);
  }
  @keyframes confetti-fall {
    0% { opacity: 0; transform: translateY(-40px) scale(0.8); }
    20% { opacity: 1; }
    100% { opacity: 0; transform: translateY(100vh) scale(1.2); }
  }
  .search-result-image {
    width: 3.25rem;
    height: 3.25rem;
    max-width: 56px;
    max-height: 56px;
    object-fit: cover;
    border-radius: var(--radius-xl);
    margin-right: 1rem;
    box-shadow: 0 1px 4px 0 rgba(30,41,59,0.10);
    flex-shrink: 0;
    background: var(--color-surface-subtle);
    display: block;
    transition: box-shadow 0.18s, transform 0.18s;
  }
  .search-result-item:hover .search-result-image,
  .search-result-item:focus .search-result-image {
    box-shadow: 0 4px 16px 0 rgba(37,99,235,0.18);
    transform: scale(1.07);
  }
  .search-result-image[onerror] {
    content: url('/assets/images/fallback-search.png'); /* fallback image path */
  }
